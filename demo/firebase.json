{
  "hosting": [
    {
      "site": "home",
      "public": "sites/home",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "function": "home"
        }
      ]
    },
    {
      "site": "adtech",
      "public": "sites/adtech",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "function": "adtech"
        },
        {
          "source": "/.well-known/**",
          "function": "adtech"
        }
      ]
    },
    {
      "site": "advertiser",
      "public": "sites/advertiser",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "function": "advertiser"
        }
      ]
    },
    {
      "site": "publisher",
      "public": "sites/publisher",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "function": "publisher"
        }
      ]
    },
    {
      "site": "news",
      "public": "sites/news",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "function": "news"
        }
      ]
    },
    {
      "site": "blog",
      "public": "sites/blog",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "function": "blog"
        }
      ]
    }
    ],
  "emulators": {
    "functions": {
      "port": "5080"
    },
    "hosting": {
      "host": "localhost",
      "port": "8080"
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ]
}
